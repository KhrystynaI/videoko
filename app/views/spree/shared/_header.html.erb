<%# leaving #spree-header div for legacy support  %>
<%# cache spree_nav_cache_key('header') do %>
<div id="spree-header" data-turbolinks-permanent>
  <div id="sidenav">
  <a href='#' class='closebtn' id="closeNav" >&times;</a>
  <ul class="header_ul_sidenav">
    <li class="header_ul_sidenav_li">
      <%if spree_current_user.nil? %>
      <%= link_to Spree.t('homepage.main_page'), spree.root_path, class: "blue" %>
      <%else %>
      <%= link_to Spree.t('homepage.account'), spree.account_path, class: "blue" %>
      <%end%>
    </li>

    <% spree_navigation_data.each do |root| %>
    <li class="header_ul_sidenav_li"><%= link_to Spree.t(root[:title]), spree.nested_taxons_path(root[:url]),class:"blue" %></li>
    <%end%>

  <li class="header_ul_sidenav_li"><%= link_to Spree.t('homepage.about_us'), spree.about_us_path, class: "blue" %></li>
  <li class="header_ul_sidenav_li"><%= link_to Spree.t('homepage.technical_support'), spree.technical_support_path, class: "blue" %></li>

  <li class="header_ul_sidenav_li"><%= link_to Spree.t('homepage.contact'), spree.contact_us_path, class: "blue" %></li>
  <li class="header_ul_sidenav_li"><%= link_to Spree.t('homepage.news'), spree.posts_path, class: "blue" %></li>
  <% if !spree_user_signed_in? %>
    <%= link_to Spree.t('nav_bar.log_in'), spree_login_path, class: "blue"  %>
        <%else%>
    <%= link_to Spree.t('nav_bar.log_out'), spree_logout_path, class: "blue", method: :get  %>
  <% end %>
  </ul>
  <div class="col-12 text-center">
  <%=link_to image_tag("facebook_header.png" , class: "footer_icon"), "https://uk-ua.facebook.com/login/", target: :_blank %>
  <%=link_to image_tag("twit_header.png" , class: "footer_icon"), "https://uk-ua.facebook.com/login/", target: :_blank %>
  <%=link_to image_tag("inst_header.png" , class: "footer_icon"), "https://uk-ua.facebook.com/login/", target: :_blank %>
  </div>
  <div class="col-12 text-center">
  <p><div class="row"><div class="col-2"><%= image_tag("phone_header.png" , class: "header_icon_img")%></div><div class="col-9"><span class="header_icon"><%= Spree::Config.first_mob%></span></div></div></p>
  <p><div class="row"><div class="col-2"><%= image_tag("phone_header.png" , class: "header_icon_img")%></div><div class="col-9"><span class="header_icon"><%= Spree::Config.second_mob%></span></div></div></p>
  <p><div class="row"><div class="col-2"><%=image_tag "viber_header.png", class: "header_icon_img"%></div><div class="col-9"><span class="header_icon"><%= Spree::Config.viber%></span></div></div></p>
  <p><div class="row"><div class="col-2"><%=image_tag "teleg_header.png", class: "header_icon_img"%></div><div class="col-9"><span class="header_icon"><%= Spree::Config.telegram%></span></div></div></p>
  <p><div class="row"><div class="col-2"><%= image_tag("phone_header.png" , class: "header_icon_img")%></div><div class="col-9"><span class="header_icon"><%= Spree::Config.first_phone%></span></div></div></p>
  <p><div class="row"><div class="col-2"><%= image_tag("phone_header.png" , class: "header_icon_img")%></div><div class="col-9"><span class="header_icon"><%= Spree::Config.second_phone%></span></div></div></p>
</div>
  <div class="col-12 text-center">
  <%= image_tag("mail_header.png", class: "footer_icon")%>
  <span class="header_icon"><%=Spree::Config.email%></span>
</div>

  </div>
  <div id="sidenav_blue"></div>

<div class="d-flex justify-content-between background-blue">

  <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
    <figure class="flex-grow-0 flex-xl-grow-1 order-xl-0 header-spree-fluid-logo m-0">
      <%= link_to image_tag("logo_5.png", id: "logo_new"), root_path%>
    </figure>
    <div class="center_vartical">

    <ul class='header_ul'>
      <li>
        <%=link_to image_tag('burger.png' , class: 'size_header'), "#", id:'openNav' %>
      </li>
      <li>
        <%= link_to image_tag("search_button.png", class: "size_header"), "#", id: "search-icon" %>
      </li>
    </ul>
    </div>
    <div id="search-drop">
      <%= render partial: 'spree/shared/search' %>
    </div>
  </div>
  <div class="col-xl-6 col-lg-6 col-md-5 col-sm-1 display_none_title">
    <%= render partial: 'spree/shared/main_nav_bar' %>
  </div>
  <div class="col-xl-2 col-lg-2 col-md-3 col-sm-3">
    <div class="center_vartical">
    <%= render partial: 'spree/shared/nav_bar' %>
    </div>
  </div>
 </div>
</div>
<%#end %>
