
<div class="container-fluid">
<h5>Замовлення</h5>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Назва</th>
      <th scope="col">Ціна</th>
      <th scope="col">Кількість</th>
    </tr>
  </thead>
  <tbody>
    <%@offer.offer_items.each do |product|%>
    <tr>
      <td><%=product.variant.product.name%></td>
      <td><%=product.price%></td>
      <td><%=product.quantity%></td>
    </tr>
    <%end%>
  </tbody>
  <tfoot>
        <tr>
            <th colspan="2">Загальна вартість</th>
            <td><%=@offer.total_price%></td>
        </tr>
        <tr>
            <th colspan="2">Валюта</th>
            <td><%=@offer.currency%></td>
        </tr>
    </tfoot>
</table>
</div>
<div class="container-fluid">
  <h5>Адреса доставки</h5>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Користувач</th>
      <th scope="col">Імя</th>
      <th scope="col">Прізвище</th>
      <th scope="col">Країна</th>
      <%if !@offer.address.state.blank?%>
      <th scope="col">Область</th>
      <th scope="col">Місто</th>
      <th scope="col">Адреса</th>
      <%end%>
      <th scope="col">Телефон</th>
      <%if !@offer.address.nova_poshta_address.blank?%>
      <th scope="col">Нова пошта(місто)</th>
      <th scope="col">Нова пошта(номер відділення)</th>
      <%end%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%=@offer.user.login%></td>
      <td><%=@offer.address.firstname%></td>
      <td><%=@offer.address.lastname%></td>
      <td><%=@offer.address.country.name%></td>
      <%if !@offer.address.state.blank?%>
      <td><%=@offer.address.state.name%></td>
      <td><%=@offer.address.city%></td>
      <td><%=@offer.address.address1%></td>
      <%end%>
      <td><%=@offer.address.phone%></td>
      <%if !@offer.address.nova_poshta_address.blank?%>
      <td><%=@offer.address.nova_poshta_address%></td>
      <td><%=@offer.address.nova_poshta_number%></td>
      <%end%>
    </tr>
  </tbody>
</table>
</div>
