<tr class="option_value fields" id="spree_<%= dom_id(f.object) %>" data-hook="option_value">
  <td class="move-handle">
    <span class="glyphicon glyphicon-move handle"></span>
    <%= f.hidden_field :id %>
  </td>

  <td class="name"><%= f.text_field :name, class: "form-control" %></td>
  <td class="presentation"><%= f.text_field :presentation, class: "form-control" %></td>
  <td class="actions actions-1" >
    <span >
    <% if f.object.persisted? %>
        <%= link_to_with_icon 'translate', nil, spree.admin_translations_path('option_values', f.object.id), title: Spree.t(:'i18n.translations'), class: 'btn btn-sm btn-primary' %>
    <% end %>
    </span>
    <span >
      <%= link_to_icon_remove_fields f %>
    </span>
  </td>
</tr>
