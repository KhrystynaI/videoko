<h5>Новий товар</h5>
<div class="form-group">
  <%= f.label Spree.t(:name),type: "label" %>
  <br/>
<%= f.text_field :name,class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label Spree.t(:quantity),type: "label" %>
  <br/>
<%= f.number_field :quantity, min: 1,class: "form-control", required: true %>
<div>
  <div class="form-group">
    <%= f.label Spree.t(:price),type: "label" %>
    <br/>
<%= f.number_field :price, min: 0,class: "form-control", required: true%>
</div>
<hr>
