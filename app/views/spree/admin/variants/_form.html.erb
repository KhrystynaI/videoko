        <%=price.hidden_field :role_id, value: Spree::Role.find_by(name: :opt).id%>
        <%end%>
      </div>

      <div class="col-12">
        <%= f.label :prices_gold, "Голд" %>
        <%=f.fields_for :prices, @variant.prices.build do |price| %>
        <%=price.text_field :amount_usd,class: 'form-control', value: price.object.amount_usd || 0.00%>
        <%=price.hidden_field :role_id, value: Spree::Role.find_by(name: :gold).id%>
        <%end%>
      </div>

      <div class="col-12">
        <%= f.label :prices_vip, "Віп" %>
        <%=f.fields_for :prices, @variant.prices.build do |price| %>
        <%=price.text_field :amount_usd,class: 'form-control', value: price.object.amount_usd || 0.00%>
        <%=price.hidden_field :role_id, value: Spree::Role.find_by(name: :vip).id%>
        <%end%>
      </div>

