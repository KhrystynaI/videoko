        <%=price.hidden_field :role_id, value: Spree::Role.find_by(name: :vip2).id%>
        <%end%>
      </div>

      <div class="col-12">
        <%= f.label :prices_vip1, "Віп1" %>
        <%=f.fields_for :prices, @variant.prices.build do |price| %>
        <%=price.text_field :amount_usd,class: 'form-control', value: price.object.amount_usd || 0.00%>
        <%=price.hidden_field :role_id, value: Spree::Role.find_by(name: :vip1).id%>
        <%end%>
      </div>
      <%end%>
</div>
</div>
</div>
