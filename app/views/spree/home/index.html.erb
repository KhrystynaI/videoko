<% @body_id = "home" %>

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <a class="index_car_pointer" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="d-flex justify-content-center align-items-center carousel-icon-control-rounded index_car" aria-hidden="true">
      <%=image_tag("index_left.png")%>
    </span>
    </a>
    <a class="right index_car_pointer" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="d-flex justify-content-center align-items-center carousel-icon-control-rounded index_car" aria-hidden="true">
      <%=image_tag("index_right.png")%>
    </span>
    </a>
    <%if Spree::ImageSlider.first.blank?%>
    <div class="carousel-inner">
      <div class="carousel-item active">
          <%= image_tag('homepage/car1.png', class: "d-block w-100 im") %>
      </div>
      <div class="carousel-item">
        <%= image_tag('homepage/car2.png', class: "d-block w-100 im") %>
      </div>
      </div>
    <%else%>
    <div class="carousel-inner">
    <%Spree::ImageSlider.all&.order(:number)&.each_with_index do |image, index|%>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <%= image_tag(main_app.url_for(image.picture), class: "d-block w-100 im") %>
        <div class="carousel-caption d-none d-md-block">
          <div class="col-6"><%= link_to "Перейти", image.url, class: 'btn index_catalog_button btn_catalog spree-btn px-5'%></div>
          <p></p>
        </div>
      </div>
     <%end%>
     </div>
    <%end%>

  </div>

<div>&nbsp;</div>
<div class="container">
  <div class="row">
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
      <%for_index_first.each do |tax|%>
      <%= link_to spree.nested_taxons_path(tax.permalink), class:"link_btn" do %>
      <div class="homepage-taxon mb-3">
        <div class="card card_index" >
          <%if !tax.icon.nil?%>
          <%= image_tag(main_app.url_for(tax.icon.try(:attachment)),class: "d-block w-100 im default_choose img_from_blob_1") %>
          <%elsif File.exist?("app/assets/images/homepage/#{tax.name}.png")%>
        <%= image_tag("homepage/#{tax.name}.png", class: "d-block w-100 img_from_blob_1 last_img_index_1") %>
        <%else%>
        <%=image_tag("no_img.png", class: "d-block w-100 default_choose img_from_blob_1")%>
        <%end%>
        <div class="card-body">
          <button class="btn btn-block spree-btn index_btn"><%= Spree.t(tax.name)%></button>
        </div>
      </div>
      </div>
      <%end%>
      <%end%>
    </div>

    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
      <%for_index_last.each do |tax|%>
      <%= link_to spree.nested_taxons_path(tax.permalink), class:"link_btn" do %>
      <div class="homepage-taxon mb-3">
        <div class="card card_index" >
          <%if !tax.icon.nil?%>
          <%= image_tag(main_app.url_for(tax.icon.try(:attachment)),class: "d-block w-100 im default_choose img_from_blob_1") %>
          <%elsif File.exist?("app/assets/images/homepage/#{tax.name}.png")%>
        <%= image_tag("homepage/#{tax.name}.png", class: "d-block w-100 img_from_blob_1 last_img_index_1") %>
        <%else%>
        <%=image_tag("no_img.png", class: "d-block w-100  default_choose img_from_blob_1")%>
        <%end%>
        <div class="card-body">
          <button class="btn btn-block spree-btn index_btn"><%= Spree.t(tax.name)%></button>
        </div>
      </div>
      </div>
      <%end%>
      <%end%>
    </div>
  </div>
</div>
