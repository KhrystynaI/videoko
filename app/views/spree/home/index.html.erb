<% @body_id = 'home' %>

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">

          <%= image_tag('homepage/carousel_first.png', class: "d-block w-100 im") %>
        <div class="carousel-caption d-none d-md-block">
          <div class="col-6"><%= link_to Spree.t('homepage.shop_now'), spree.products_path, class: 'btn btn_catalog spree-btn px-5' %></div>
          <p></p>
          <h1><%= Spree.t("homepage.main_title_first") %></h1>
          <h1><%= Spree.t("homepage.main_title_second") %></h1>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag('homepage/carousel_second.png', class: "d-block w-100 im") %>
        <div class="carousel-caption d-none d-md-block">
          <div class="col-6"><%= link_to Spree.t('homepage.shop_now'), spree.products_path, class: 'btn btn_catalog spree-btn px-5' %></div>
          <p></p>
          <h1><%= Spree.t("homepage.main_title_first") %></h1>
          <h1><%= Spree.t("homepage.main_title_second") %></h1>
        </div>
      </div>
      </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </a>
  </div>

<div>&nbsp;</div>
<div class="container">
  <div class="row">
    <div class="col-6">
      <%Spree::Taxon.where(depth:0).first(3).each do |tax|%>
      <div class="homepage-taxon-box mb-3">
        <div class="card">
        <%= image_tag("homepage/#{tax.name}.png", class: "d-block w-100 im") %>
        <div class="card-body">
          <%= link_to Spree.t("#{tax.name}"), spree.nested_taxons_path(tax.permalink), class: "btn btn-block index_btn"  %>
        </div>
      </div>
      </div>
      <%end%>
    </div>

    <div class="col-6">
      <%Spree::Taxon.where(depth:0).last(3).each do |tax|%>
      <div class="homepage-taxon-box mb-3">
        <div class="card">
        <%= image_tag("homepage/#{tax.name}.png", class: "d-block w-100 im index_img") %>
        <div class="card-body">
          <%= link_to Spree.t("#{tax.name}"), spree.nested_taxons_path(tax.permalink), class: " btn btn-block index_btn"  %>
        </div>
      </div>
      </div>
      <%end%>
    </div>
  </div>
</div>
