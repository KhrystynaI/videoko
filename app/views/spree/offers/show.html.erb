<p>&nbsp;</p>
<div class="container">
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">№</th>
      <th scope="col">Назва</th>
      <th scope="col">Кількість</th>
      <th scope="col">Ціна</th>
    </tr>
  </thead>
  <tbody>
    <%@offer.offer_items.each_with_index do |product, index|%>
    <tr>
      <td><%=index+1%></td>
      <td><%=product.variant.product.name%></td>
      <td><%=product.quantity%></td>
      <td><%=product.price%></td>
    </tr>
    <%end%>
  </tbody>
  <tfoot>
        <tr>
            <th colspan="3">Загальна вартість</th>
            <td><%=@offer.total_price%></td>
        </tr>
        <tr>
            <th colspan="3">Валюта</th>
            <td><%=@offer.currency%></td>
        </tr>
        <tr>
            <th colspan="3">Дата</th>
            <td><%=@offer.created_at.strftime("%d.%m.%Y")%></td>
        </tr>
        <tr>
            <td colspan="4"><%=@offer.comment%></td>
        </tr>
    </tfoot>
</table>

</div>
<p>&nbsp;</p>
<div class="container">
  <%= link_to Spree.t("print"), show_offer_path(@offer.id, format: :pdf), class: 'btn btn-block btn-lg index_btn text-uppercase font-weight-bold'%>
</div>
<p>&nbsp;</p>
<div class="container">
  <%= link_to Spree.t("checkout"), create_order_path(@offer.id), class: 'btn btn-block btn-lg index_btn text-uppercase font-weight-bold'%>
</div>
<p>&nbsp;</p>
